/** General Styling ***/


/**********************/

body {
  font-family: HelveticaNeue, Helvetica, sans serif;
}

button {
  color: #fff;
  background: #006BDC;
  border: none;
  font-size: 1em;
  z-index: 50;
}


/**********************/


/** Popup Styling *****/


/**********************/


/* Title bar */

#content-titlebar {
  background: #144A7F;
  font-size: 21.7px;
  color: #FFFFFF;
  margin: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

#content-titlebar h1 {
  font-size: 1.5em;
  padding: 15px;
  font-weight: bold;
}


/* Controls */

#back-button {
  float: left;
}

#next-button {
  float: right;
}

div#frame-controls {
  margin: 15px;
}

#frame-controls {
  margin-top: 15px;
}


/* Content display frame */

div#frame-content {
  overflow: hidden;
}

#content-carousel {
  position: relative;
  clear: both;
}

.content-body {
  margin-top: 25px;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
}

#picture {
  margin: 0 25px 25px 25px;
}


/* Body text */

.body-box {
  flex-grow: 2;
  height: 100%;
}

.body-box h2 {
  padding-top: 25px;
}

.body-box p {
  padding-top: 10px;
}

.body-title {
  font-size: 1.3em;
  margin-bottom: 25px;
}

.body-text {
  width: 50%;
  margin-right: 30px;
}

.questions {
  font-style: italic;
  font-size: 0.8em;
}

#house-selector {
  display: flex;
  flex-direction: row;
}

label > input {
  /* HIDE RADIO */
  display: none;
}

label > input + img {
  /* IMAGE STYLES */
  cursor: pointer;
  border: 4px solid transparent;
  max-width: 70px;
}

label > input:checked + img {
  /* (CHECKED) IMAGE STYLES */
  border: 4px solid #144A7F;
  max-width: 70px;
}

div#frame {
  display: flex;
  min-width: 300px;
  flex-direction: column;
}


