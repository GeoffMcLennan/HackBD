/**********************/


/***** Responsive *****/


/**********************/


/* small screens */

@media all and (min-width: 300px) {
  #frame {
    background-color: #fefefe;
    margin: 10% auto;
    border: 1px solid #888;
    width: 60%;
    align-items: stretch;
  }
  .content-body {
    flex-direction: column;
    align-items: center;
  }
  .body-box {
    padding-left: 0px;
    width: 70%;
    min-height: 250px;
  }
  .body-text {
    width: 100%;
  }
}

@media all and (min-width: 700px) {
  #frame {
    background-color: #fefefe;
    margin: 10% auto;
    border: 1px solid #888;
    width: 60%;
    align-items: stretch;
  }
  .content-body {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .body-box {
    padding-left: 0px;
    width: 70%;
    height: auto;
  }
  .body-text {
    width: 100%;
  }
  label > input + img {
    max-width: 50px;
  }
  label > input:checked + img {
    max-width: 50px;
  }
}

@media all and (min-width: 1000px) {
  #frame {
    background-color: #fefefe;
    margin: 10% auto;
    border: 1px solid #888;
    width: 45%;
    /* Could be more or less, depending on screen size */
  }
  .content-body {
    display: flex;
    flex-direction: row;
    padding-left: 25px;
    align-items: stretch;
  }
  .body-text {
    width: 100%;
  }
  #body-box {
    transform: translateY(40%);
    width: 70%;
    min-height: 250px;
  }
}
